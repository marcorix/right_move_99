<div class="container">


    <div class="w-100">
      <h1><%= @flat.name %></h1>
      <div class="d-flex">

        <div id="carouselExampleControls" class="carousel slide w-75 me-4" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @flat.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %> " data-bs-interval="3000">
                <%= cl_image_tag photo.key , class: "d-block w-100", height: 400 %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        <div style="width: 25%; height: 400px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>

    <div class="cards mt-4">
      <% @flat.photos.each do |photo| %>
        <div class="flat-img">
          <%= cl_image_tag photo.key , height: 200, width: 300, crop: :fill %>
        </div>
      <% end %>
    </div>

  <div class="d-flex justify-content-between align-items-start mt-5">
      <div>
        <p> 📍 <%= @flat.address %></p>
        <p> 👥 <%= @flat.guests %></p>
        <p> £ <%= @flat.price %> per day</p>
        <p> Owner: <%= @flat.user.email.match(/^([^@]+)/) %></p>
      </div>

    <div class="booking-form w-25">
      <%= render 'bookings/form', {flat: @flat, booking: @booking}  %>
    </div>

  </div>

  <%# Reviews %>
  <div class="reviews-container d-flex mt-4 p-4" data-controller="insert-reviews">
    <div class="review-form w-50 me-3">
      <h2>Leave a Review</h2>
      <%= render 'reviews/form', { flat: @flat, review: @review } %>
    </div>
    <div class="review-form w-50 ms-2" data-insert-reviews-target="list">
      <% @flat.reviews.each do |review| %>
        <%= render 'reviews/review', review: review %>
      <% end %>
    </div>
  </div>

</div>
