<div class="container">
  <h1><%= @flat.name %></h1>
  <p> 📍 <%= @flat.address %></p>
  <p> 👥 <%= @flat.guests %></p>
  <div class="cards">
      <% @flat.photos.each do |photo| %>
        <div class="flat-img">
          <%= cl_image_tag photo.key , height: 200, width: 300, crop: :fill %>
        </div>
      <% end %>
  </div>
  <hr>
  <h2>Leave a review</h2>
  <%= simple_form_for [@flat, @review] do |f| %>
    <%=  f.input :comment %>
    <%= f.input :rating, collection: (1..5) %>
    <%= f.submit %>
  <% end %>
  <hr>
  <ul>
    <%= @flat.reviews.each do |review|%>
    <% end %>
  </ul>
</div>
